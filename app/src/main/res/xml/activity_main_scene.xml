<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/endScrolling"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:touchAnchorId="@+id/item_bg_recycle"
            app:touchAnchorSide="left" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="500">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/scrollView"
            app:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/item_bg_recycle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="@+id/space"
            app:layout_constraintStart_toEndOf="@+id/vertical_motion"
            app:layout_constraintTop_toBottomOf="@+id/balance" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/endScrolling">

        <Constraint
            android:id="@+id/item_bg_recycle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="@+id/space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/vertical_motion"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:background="@drawable/vertical_corners"
            android:elevation="1dp"
            app:layout_constraintEnd_toStartOf="parent" />

        <Constraint
            android:id="@+id/item_bg_recycle"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/balance"
            app:transitionEasing="standard" />

        <Constraint
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance" />

    </ConstraintSet>


</MotionScene>
