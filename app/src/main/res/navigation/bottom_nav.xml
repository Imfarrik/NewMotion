<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.myapplicationnewmotion.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/mainFragmentToCardInfoFragment"
            app:destination="@id/cardHolderActivity" />
    </fragment>
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.example.myapplicationnewmotion.fragments.TransactionsFragment"
        android:label="fragment_transactions"
        tools:layout="@layout/fragment_transactions" />
    <fragment
        android:id="@+id/payFragment"
        android:name="com.example.myapplicationnewmotion.fragments.PayFragment"
        android:label="fragment_pay"
        tools:layout="@layout/fragment_pay" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.myapplicationnewmotion.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <activity
        android:id="@+id/cardHolderActivity"
        android:name="com.example.myapplicationnewmotion.CardHolderActivity"
        android:label="activity_card_holder"
        tools:layout="@layout/activity_card_holder">
        <argument
            android:name="myArg"
            android:defaultValue="Hey!"
            app:argType="string" />
    </activity>

</navigation>