    <style name="Theme.MyApplicationNewMotion.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
    </style>
    <style name="Theme.MyApplicationNewMotion.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#26263C</item>
        <item name="android:navigationBarColor">#fff2f4f8</item>
    </style>
    <style name="Theme.MyApplicationNewMotion.CardsContainer">
